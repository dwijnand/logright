<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
    <property name="pattern"
        value="%d{HH:mm:ss.SSS} %-5level logger:%logger class:%class method:%method line:%line - %msg%n" />

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder
            class="com.dwijnand.logright.logging.CustomPatternLayoutEncoder">
            <pattern>${pattern}</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="console" />
    </root>
</configuration>
